

# Application Name
spring.application.name=User-Service

# Server Port
server.port=8080

# MySQL Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/User-Service?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
